  height: 400rpx;
  font-size: 0;
  line-height: 0;
}
.home__shopmall-image {
    float: left;
    width: 50%;
    height: 200rpx;
}
.home__shopmall-image:nth-of-type(2n) {
      border-left: 1rpx solid #fff;
}
